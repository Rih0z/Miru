{
  "name": "miru",
  "version": "0.1.0",
  "private": true,
  "author": "Rih0z",
  "repository": {
    "type": "git",
    "url": "https://github.com/Rih0z/Miru.git"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/lib/",
    "test:components": "jest --testPathPattern=tests/components/",
    "test:integration": "jest --testPathPattern=tests/integration/",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:local": "playwright test --config=playwright.config.local.ts",
    "test:e2e:local:ui": "playwright test --config=playwright.config.local.ts --ui",
    "test:jest": "jest",
    "test:all": "npm run test:unit && npm run test:components && npm run test:integration && npm run test:e2e",
    "test:ci": "jest --coverage --watchAll=false",
    "format": "prettier --write .",
    "deploy": "next build && wrangler pages deploy out --project-name miru --commit-dirty=true"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "autoprefixer": "^10.4.16",
    "clsx": "^2.1.1",
    "lucide-react": "^0.513.0",
    "next": "^14.2.29",
    "next-intl": "^4.1.0",
    "postcss": "^8.4.32",
    "react": "^18",
    "react-dom": "^18",
    "react-dropzone": "^14.3.8",
    "react-icons": "^5.5.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.52.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "14.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.0",
    "typescript": "^5"
  }
}
